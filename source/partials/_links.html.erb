<%# If background_type is 'festa', set background_class to 'bg-festa'. %>
<% background_class = case background_type
     when "ponto de vendas" then "bg-pontos-de-venda"
     when "cronograma" then "bg-cronograma"
     when "acesso" then "bg-acesso"
     else "bg-default" # fallback
   end
%>


<% link_to link_url, class: "background-link" do %>
   <div class="options">
      <div class="<%= background_class %>">
      </div>
      <div class="text-center">
         <h3><%= background_type.capitalize %></h3>
      </div>
   </div>
<% end %>
